{
	"name": "modern-react-stack",
	"version": "0.1.0",
	"type": "module",
	"private": true,
	"packageManager": "pnpm@9.0.0",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0",
		"npm": "please-use-pnpm",
		"yarn": "please-use-pnpm"
	},
	"scripts": {
		"preinstall": "node scripts/only-allow-pnpm.js",
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"i18n:extract": "lingui extract",
		"i18n:compile": "lingui compile",
		"i18n:extract:watch": "lingui extract --watch",
		"prebuild": "pnpm run i18n:compile",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"lint:staged": "biome check --write --files-ignore-unknown=true --no-errors-on-unmatched $(git diff --cached --name-only --diff-filter=ACMR | tr '\\n' ' ')",
		"lint:prod": "biome check --config-path=biome.prod.json .",
		"lint:prod:fix": "biome check --config-path=biome.prod.json --write .",
		"lint:dev": "biome check --config-path=biome.dev.json .",
		"lint:dev:fix": "biome check --config-path=biome.dev.json --write .",
		"format": "biome format --write .",
		"format:check": "biome format --check .",
		"format:staged": "biome format --write --files-ignore-unknown=true --no-errors-on-unmatched $(git diff --cached --name-only --diff-filter=ACMR | tr '\\n' ' ')",
		"format:prod": "biome format --config-path=biome.prod.json --write .",
		"format:dev": "biome format --config-path=biome.dev.json --write .",
		"type-check": "tsc --noEmit",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage",
		"test:ci": "vitest run",
		"test:unit": "vitest run --config vitest.unit.config.ts",
		"test:integration": "vitest run --config vitest.integration.config.ts",
		"test:e2e": "vitest run --config vitest.config.ts e2e/**/*.test.{ts,tsx}",
		"test:related": "vitest related --run",
		"test:coverage:check": "vitest run --coverage --coverage.thresholds.autoUpdate=false",
		"test:watch": "vitest --watch",
		"test:watch:ui": "vitest --ui --watch",
		"build:analyze": "pnpm run build && node scripts/analyze-bundle.js",
		"check:duplicates": "pnpm dlx jscpd src --threshold 3 --reporters console",
		"cache:clear": "rm -rf node_modules/.cache .vite dist coverage",
		"hooks:install": "lefthook install",
		"hooks:uninstall": "lefthook uninstall",
		"hooks:setup": "node scripts/setup-hooks.js",
		"hooks:check": "node scripts/check-hooks.js",
		"hooks:run": "lefthook run",
		"pre-push": "node scripts/pre-push-checks.js",
		"quick-check": "node scripts/quick-check.js",
		"commit": "node scripts/commit-helper.js",
		"commit:lint": "commitlint --edit",
		"commit:lint-last": "commitlint --from HEAD~1 --to HEAD --verbose",
		"commit:lint-all": "commitlint --from=HEAD~10 --to=HEAD --verbose",
		"commit:check": "node scripts/check-commits.js",
		"prepare": "lefthook install"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.2.2",
		"@lingui/cli": "^5.5.1",
		"@lingui/core": "^5.5.1",
		"@lingui/macro": "^5.5.1",
		"@lingui/react": "^5.5.1",
		"@lingui/vite-plugin": "^5.5.1",
		"@radix-ui/react-slot": "^1.2.3",
		"@reduxjs/toolkit": "^2.9.1",
		"@tanstack/react-query": "^5.90.5",
		"@tanstack/react-query-devtools": "^5.90.2",
		"@tanstack/react-router": "^1.133.13",
		"@tanstack/react-table": "^8.21.3",
		"@tanstack/router-devtools": "^1.133.13",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"ky": "^1.12.0",
		"lucide-react": "^0.546.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-hook-form": "^7.65.0",
		"react-redux": "^9.2.0",
		"tailwind-merge": "^3.3.1",
		"zod": "^4.1.12",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.6",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@tailwindcss/postcss": "^4.1.14",
		"@tanstack/router-plugin": "^1.133.13",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/bun": "^1.3.0",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"@vitejs/plugin-react": "^5.0.4",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"babel-plugin-macros": "^3.1.0",
		"jsdom": "^27.0.1",
		"lefthook": "^1.13.6",
		"tailwindcss": "^4.1.14",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "^7.1.10",
		"vitest": "^3.2.4"
	}
}
